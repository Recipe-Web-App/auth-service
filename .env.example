# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s
SERVER_SHUTDOWN_TIMEOUT=30s
# SERVER_TLS_CERT=/path/to/cert.pem
# SERVER_TLS_KEY=/path/to/key.pem

# Redis Configuration (Optional - will fall back to in-memory store if unavailable)
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONN=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_TIMEOUT=4s
REDIS_IDLE_TIMEOUT=300s

# JWT Configuration (REQUIRED)
# Generate a secure 32+ character secret key
JWT_SECRET=your-super-secret-jwt-signing-key-at-least-32-characters-long-please-change-this
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h
JWT_ISSUER=auth-service
JWT_ALGORITHM=HS256

# OAuth2 Configuration
OAUTH2_AUTHORIZATION_CODE_EXPIRY=10m
OAUTH2_CLIENT_CREDENTIALS_EXPIRY=1h
OAUTH2_PKCE_REQUIRED=true
OAUTH2_DEFAULT_SCOPES=openid,profile
OAUTH2_SUPPORTED_SCOPES=openid,profile,email,read,write
OAUTH2_SUPPORTED_GRANT_TYPES=authorization_code,client_credentials,refresh_token
OAUTH2_SUPPORTED_RESPONSE_TYPES=code

# Security Configuration
SECURITY_RATE_LIMIT_RPS=100
SECURITY_RATE_LIMIT_BURST=200
SECURITY_RATE_LIMIT_WINDOW=1m
SECURITY_ALLOWED_ORIGINS=*
SECURITY_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
SECURITY_ALLOWED_HEADERS=*
# SECURITY_EXPOSED_HEADERS=
SECURITY_ALLOW_CREDENTIALS=true
SECURITY_MAX_AGE=86400
# SECURITY_TRUSTED_PROXIES=127.0.0.1,::1
SECURITY_SECURE_COOKIES=true
SECURITY_SAME_SITE_COOKIES=strict

# Logging Configuration
LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout
